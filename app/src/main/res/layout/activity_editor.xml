<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <net.mikael.aiworicheditor.ArticleEditorWebView
        android:id="@+id/editorWebView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#F8F9FA"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/uploadImageIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_image" />

        <net.mikael.aiworicheditor.CheckImageView
            android:id="@+id/boldIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_bold" />

        <net.mikael.aiworicheditor.CheckImageView
            android:id="@+id/quoteIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_quote" />

        <net.mikael.aiworicheditor.CheckImageView
            android:id="@+id/alignLeftIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_align_left" />

        <net.mikael.aiworicheditor.CheckImageView
            android:id="@+id/alignCenterIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_align_center" />

        <net.mikael.aiworicheditor.CheckImageView
            android:id="@+id/alignRightIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_align_right" />

        <ImageView
            android:id="@+id/undoIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_undo" />

        <ImageView
            android:id="@+id/redoIv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:src="@drawable/ic_editor_redo" />
    </LinearLayout>

</LinearLayout>